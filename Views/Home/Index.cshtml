@{
    ViewData["Title"] = "Index";
}

<h1>SeriesFun</h1>
<p>watch your favourite channels</p>
<article>
@for(int i = 0; i<ViewBag.Series.Count; i++){
    <div class="card" style="width: 18rem;">
        <img src="@ViewBag.Series[i].ImagenSerie" class="card-img-top" alt="...">
        <h5 class="card-title">@ViewBag.Series[i].Nombre</h5>
        <button style="margin-bottom: 1%;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSeries" onclick="MostrarTemporadas(@ViewBag.Series[i].IdSerie)">Ver temporadas</button>
        <button style="margin-bottom: 1%;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSeries" onclick="MostrarActores(@ViewBag.Series[i].IdSerie)">Ver actores</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalSeries" onclick="MostrarMasInfo(@ViewBag.Series[i].IdSerie)">Mas info</button>
    </div>
}
</article>
<!-- Modal -->
<div class="modal" id="ModalSeries" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="Contenido" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>